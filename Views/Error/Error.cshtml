@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <h1 class="display-1 text-danger">@ViewBag.StatusCode</h1>
                <h2 class="text-danger mb-4">@ViewBag.ErrorTitle</h2>
                <p class="lead">@ViewBag.ErrorMessage</p>
                <hr class="my-4" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Go to Homepage</a>
            </div>
        </div>
    </div>
</div>