@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0">Member Registration - Fresh Farm Market</h2>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post" enctype="multipart/form-data" id="registerForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreditCardNo" class="form-label"></label>
                        <input asp-for="CreditCardNo" class="form-control" maxlength="16" placeholder="1234567812345678" />
                        <span asp-validation-for="CreditCardNo" class="text-danger"></span>
                        <small class="form-text text-muted">16 digits only (will be encrypted)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MobileNo" class="form-label"></label>
                        <input asp-for="MobileNo" class="form-control" maxlength="8" placeholder="91234567" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                        <small class="form-text text-muted">Singapore format: 8 digits starting with 6, 8, or 9</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeliveryAddress" class="form-label"></label>
                        <textarea asp-for="DeliveryAddress" class="form-control" rows="3" placeholder="123 Orchard Road, Singapore 238858"></textarea>
                        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="your.email@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- PASSWORD FIELD -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" id="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <!-- Password Requirements Checklist -->
                        <div id="passwordRequirements" class="mt-3">
                            <h6 class="mb-2">Password Requirements:</h6>
                            <ul class="list-unstyled mb-0">
                                <li id="reqLength" class="text-danger">
                                    <i class="fas fa-times-circle"></i> At least 12 characters
                                </li>
                                <li id="reqLower" class="text-danger">
                                    <i class="fas fa-times-circle"></i> One lowercase letter
                                </li>
                                <li id="reqUpper" class="text-danger">
                                    <i class="fas fa-times-circle"></i> One uppercase letter
                                </li>
                                <li id="reqNumber" class="text-danger">
                                    <i class="fas fa-times-circle"></i> One number
                                </li>
                                <li id="reqSpecial" class="text-danger">
                                    <i class="fas fa-times-circle"></i> One special character
                                </li>
                            </ul>
                        </div>

                        <!-- Password Strength Indicator -->
                        <div id="passwordStrength" class="mt-2"></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <div id="passwordMatch" class="mt-2"></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label"></label>
                        <input asp-for="Photo" class="form-control" type="file" accept=".jpg,.jpeg" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                        <small class="form-text text-muted">JPG format only, maximum 5MB</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AboutMe" class="form-label"></label>
                        <textarea asp-for="AboutMe" class="form-control" rows="4" placeholder="Tell us about yourself..."></textarea>
                        <span asp-validation-for="AboutMe" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success btn-lg">Register</button>
                    </div>

                    <div class="text-center">
                        Already have an account? <a asp-action="Login">Login here</a>
                    </div>
                </form>  
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@ViewBag.ReCaptchaSiteKey"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const requirements = {
                length: document.getElementById('reqLength'),
                lower: document.getElementById('reqLower'),
                upper: document.getElementById('reqUpper'),
                number: document.getElementById('reqNumber'),
                special: document.getElementById('reqSpecial')
            };
            
            // Check password criteria
            function checkPasswordCriteria(password) {
                const checks = {
                    length: password.length >= 12,
                    lower: /[a-z]/.test(password),
                    upper: /[A-Z]/.test(password),
                    number: /\d/.test(password),
                    special: /[$!%*?&#^()_+=\[\]{};':"\\|,.<>\/-]/.test(password)
                };
                
                return checks;
            }
            
            // Update UI based on criteria
            function updatePasswordUI(checks) {
                // Update requirement indicators
                for (const [key, element] of Object.entries(requirements)) {
                    if (checks[key]) {
                        element.className = "requirement-met";
                        element.innerHTML = '<i class="fas fa-check-circle"></i> ' + element.textContent.replace(/^.*? - /, '');
                    } else {
                        element.className = "requirement-not-met";
                        element.innerHTML = '<i class="fas fa-times-circle"></i> ' + element.textContent.replace(/^.*? - /, '');
                    }
                }
                
                // Calculate strength
                const metCount = Object.values(checks).filter(v => v).length;
                const strengthDiv = document.getElementById('passwordStrength');
                
                if (passwordInput.value.length === 0) {
                    strengthDiv.innerHTML = '';
                    return;
                }
                
                const strengthLabels = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
                const strengthColors = ['danger', 'danger', 'warning', 'info', 'success'];
                const strengthPercent = (metCount / 5) * 100;
                
                strengthDiv.innerHTML = `
                    <div class="progress mb-1" style="height: 8px;">
                        <div class="progress-bar bg-${strengthColors[metCount-1]}" 
                             role="progressbar" 
                             style="width: ${strengthPercent}%">
                        </div>
                    </div>
                    <small class="text-${strengthColors[metCount-1]} fw-bold">
                        Strength: ${strengthLabels[metCount-1]} (${metCount}/5 requirements met)
                    </small>
                `;
                
                // Add blinking warning if not all requirements met
                const isFormValid = metCount === 5;
                if (!isFormValid && passwordInput.value.length > 0) {
                    if (!strengthDiv.classList.contains('blink-warning')) {
                        strengthDiv.classList.add('blink-warning');
                    }
                } else {
                    strengthDiv.classList.remove('blink-warning');
                }
            }
            
            // Check password match
            function checkPasswordMatch() {
                const matchDiv = document.getElementById('passwordMatch');
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                
                if (confirmPassword.length === 0) {
                    matchDiv.innerHTML = '';
                    return;
                }
                
                if (password === confirmPassword) {
                    matchDiv.innerHTML = '<span class="text-success"><i class="fas fa-check-circle"></i> Passwords match</span>';
                } else {
                    matchDiv.innerHTML = '<span class="text-danger"><i class="fas fa-times-circle"></i> Passwords do not match</span>';
                }
            }

            // Event listeners
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                const checks = checkPasswordCriteria(password);
                updatePasswordUI(checks);
                checkPasswordMatch();

                // Constant prompting if less than 12 chars
                if (password.length > 0 && password.length < 12) {
                    const strengthDiv = document.getElementById('passwordStrength');
                    if (!strengthDiv.innerHTML.includes('Minimum 12 characters')) {
                        strengthDiv.innerHTML += `
                            <div class="alert alert-warning alert-dismissible fade show mt-2 py-2" role="alert">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Password too short!</strong> You need at least ${12 - password.length} more characters.
                                <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                    }
                }
            });

            confirmPasswordInput.addEventListener('input', checkPasswordMatch);

            // Form submission validation - COMBINED WITH reCAPTCHA
            document.getElementById('registerForm').addEventListener('submit', function(e) {
                const password = passwordInput.value;
                const checks = checkPasswordCriteria(password);
                const allMet = Object.values(checks).every(v => v);

                if (!allMet) {
                    e.preventDefault();

                    // Highlight unmet requirements
                    for (const [key, element] of Object.entries(requirements)) {
                        if (!checks[key]) {
                            element.classList.add('blink-warning');
                        }
                    }

                    // Show error alert
                    alert('Please meet all password requirements before submitting!');
                    passwordInput.focus();
                    return false;
                }
                
                // If password requirements are met, proceed with reCAPTCHA
                e.preventDefault();
                grecaptcha.ready(function() {
                    grecaptcha.execute('@ViewBag.ReCaptchaSiteKey', {action: 'register'}).then(function(token) {
                        document.getElementById('recaptchaToken').value = token;
                        document.getElementById('registerForm').submit();
                    });
                });
            });

            // Initial check (in case of autofill)
            passwordInput.addEventListener('change', function() {
                const checks = checkPasswordCriteria(this.value);
                updatePasswordUI(checks);
            });
        }); // Closing for $(document).ready()
    </script>
    @* <partial name="_ValidationScriptsPartial" /> *@
}