@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">Forgot Password</h2>
            </div>
            <div class="card-body">
                <p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>

                <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="your.email@example.com" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />

                    <div class="d-grid gap-2 mb-3">
                        <!-- ⭐ CHANGED: type="button" instead of type="submit" -->
                        <button type="button" class="btn btn-info btn-lg" id="submitBtn" onclick="handleSubmit()">
                            <span id="btnText">Send Reset Link</span>
                            <span id="btnSpinner" class="spinner-border spinner-border-sm d-none"></span>
                        </button>
                    </div>

                    <div class="text-center">
                        Remember your password? <a asp-action="Login">Login here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@ViewBag.ReCaptchaSiteKey"></script>
    <script>
        function handleSubmit() {
            console.log('=== BUTTON CLICKED ===');

            const submitButton = document.getElementById('submitBtn');
            const btnText = document.getElementById('btnText');
            const btnSpinner = document.getElementById('btnSpinner');
            const form = document.getElementById('forgotPasswordForm');

            // Disable button and show spinner
            submitButton.disabled = true;
            btnText.classList.add('d-none');
            btnSpinner.classList.remove('d-none');

            console.log('Getting reCAPTCHA token...');

            grecaptcha.ready(function() {
                grecaptcha.execute('@ViewBag.ReCaptchaSiteKey', {action: 'forgot_password'})
                    .then(function(token) {
                        console.log('✅ reCAPTCHA token received:', token.substring(0, 30) + '...');

                        // Set the token in hidden field
                        document.getElementById('recaptchaToken').value = token;
                        console.log('✅ Token set in hidden field');

                        // Now submit the form
                        console.log('✅ Submitting form...');
                        form.submit();
                    })
                    .catch(function(error) {
                        console.error('❌ reCAPTCHA error:', error);

                        // Re-enable button on error
                        submitButton.disabled = false;
                        btnText.classList.remove('d-none');
                        btnSpinner.classList.add('d-none');

                        alert('reCAPTCHA verification failed. Please try again.');
                    });
            });
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}